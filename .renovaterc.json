{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "KSmanis/renovate-config"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/ksmanis/gentoo-distcc",
        "ghcr.io/ksmanis/portage"
      ],
      "pinDigests": false
    },
    {
      "automerge": true,
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/ksmanis/stage3"
      ],
      "versioning": "regex:^(?<patch>\\d{8})$"
    }
  ],
  "semanticCommits": "enabled"
}
